<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_gravity="center"
>

    <TextView
            android:text="@string/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textAppearance="@android:style/TextAppearance.Material.Headline"
            android:layout_marginBottom="10dp" android:layout_marginTop="10dp"/>
    <Switch
            android:text="@string/switchSound"
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/soundSwitch"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_marginBottom="15dp" android:layout_marginTop="5dp"/>

    <Button
            android:text="@string/btnStop"
            android:layout_width="150dp"
            android:layout_height="wrap_content" android:id="@+id/stopButton"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_marginLeft="5dp"/>
    <Button
            android:text="@string/btnStart"
            android:layout_width="150dp"
            android:layout_height="wrap_content" android:id="@+id/startButton"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_marginRight="5dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/currentStatusServiceTextView"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginTop="20dp" android:layout_gravity="center_horizontal"/>
    <Switch
            android:text="@string/switchVibration"
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/vibrationSwitch"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="1"
    />
</GridLayout>
